@model Vrote_Diana.Pages.ContactInfos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Informatii de contact Zillow</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo[0].ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo[0].ContactPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo[0].ContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo[0].ContactAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ContactInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactAdress)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
