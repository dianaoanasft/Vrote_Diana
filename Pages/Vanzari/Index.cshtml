@model Vrote_Diana.Pages.Vanzari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Vanzari</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vanzare[0].Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vanzare[0].Home)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vanzare[0].DataVanzare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vanzare[0].PretVanzare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vanzare[0].Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vanzare) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Buyer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Home.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVanzare)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PretVanzare)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.FullName)
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
