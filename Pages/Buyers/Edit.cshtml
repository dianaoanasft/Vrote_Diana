@page
@model Vrote_Diana.Pages.Buyers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Buyer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Buyer.ID" />
            <div class="form-group">
                <label asp-for="Buyer.FirstName" class="control-label"></label>
                <input asp-for="Buyer.FirstName" class="form-control" />
                <span asp-validation-for="Buyer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer.LastName" class="control-label"></label>
                <input asp-for="Buyer.LastName" class="form-control" />
                <span asp-validation-for="Buyer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer.Adress" class="control-label"></label>
                <input asp-for="Buyer.Adress" class="form-control" />
                <span asp-validation-for="Buyer.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer.Email" class="control-label"></label>
                <input asp-for="Buyer.Email" class="form-control" />
                <span asp-validation-for="Buyer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer.Phone" class="control-label"></label>
                <input asp-for="Buyer.Phone" class="form-control" />
                <span asp-validation-for="Buyer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer.MemberID" class="control-label"></label>
                <select asp-for="Buyer.MemberID" class="form-control" asp-items="ViewBag.MemberID"></select>
                <span asp-validation-for="Buyer.MemberID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
